pipeline {
    agent any
    
    tools {
    jdk 'jdk9_update00'
    }
    stages {
        stage('Clone') {
            steps {
                sh "rm -rf *"
                sh "git clone https://github.com/karimFSL/jenkins-tuto"
            }
        }


        stage('Build') {
            steps {
                sh "java -version"
                sh "cd jenkins-tuto/tuto-jenkins-1 && javac Main.java"
            }
        }


        stage('Run') {
            steps {
                sh "cd jenkins-tuto/tuto-jenkins-1 && java Main"
            }
        }
        
         stage('Tests SoapUI') {
            steps {
                sh "/opt/SmartBear/SoapUI-5.6.0/bin/testrunner.sh -r jenkins-tuto/14-maven/helloworld/tests/soapui/Project1-soapui-project.xml"
            }
        }
    }
}
